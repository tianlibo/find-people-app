= stylesheet_link_tag  "http://cache.amap.com/lbs/static/main1119.css"
= javascript_include_tag "http://cache.amap.com/lbs/static/es5.min.js"
= javascript_include_tag "http://webapi.amap.com/maps?v=1.3&key=f2c1178ddca72e990d5f17edcad40f8b"
= javascript_include_tag "http://cache.amap.com/lbs/static/addToolbar.js"

div#container


javascript:
  var map = new AMap.Map('container', {
    resizeEnable: true,
    zoom:300,
    center: #{@center}   
  });

  var crumbs = #{@crumbs}

  for(var j = 0; j < crumbs.length; j += 1) {
    var circle = new AMap.Circle({
        center: crumbs[j],
        map: map,
        radius: 3,
        strokeColor: "#00FF33",
        strokeOpacity: 1,
        strokeWeight: 3,
        fillColor: "#00FF33",
        fillOpacity: 1
    });
  }

  var infoWindow = new AMap.InfoWindow({offset: new AMap.Pixel(0, -30)});
  var positions = #{@positions.to_json.html_safe}

  for(var j = 0; j < positions.length; j += 1) {
    var circle = new AMap.Circle({
        center: positions[j][0],
        map: map,
        radius: 3,
        strokeColor: "#3498DB",
        strokeOpacity: 1,
        strokeWeight: 3,
        fillColor: "#3498DB",
        fillOpacity: 1,
        draggable: true
    });    
    circle.content = "姓名:"+positions[j][1][0]+"等级:"+positions[j][1][1]
    circle.on('click', circleClick);
    circle.emit('click', {target: circle});
  }

  function circleClick(e) {
    infoWindow.setContent(e.target.content);
    infoWindow.open(map, e.target.getCenter());
  }

  var contextMenu = new AMap.ContextMenu(); 
  contextMenu.addItem("添加新点", function(e) {
    $.ajax({
      type: 'POST',
      url: "http://localhost:3000/api/v1/crumbs/create",
      data:{"crumb":{"latitude":contextMenuPositon.J,"longitude":contextMenuPositon.D}},
      dataType:'jsonp',
      success: function(){},  
      error: function(xhr, textStatus, ex){
        if(xhr.status==201)
        {
          var circle = new AMap.Circle({
            map: map,
            center: contextMenuPositon, 
            radius: 3,
            strokeColor: "#00FF33",
            strokeOpacity: 1,
            strokeWeight: 3,
            fillColor: "#00FF33",
            fillOpacity: 1
          });
        }else{
          alert("异常"); 
        }
      }
    })

    var circle = new AMap.Circle({
        map: map,
        center: contextMenuPositon, 
        radius: 3,
        strokeColor: "#00FF33",
        strokeOpacity: 1,
        strokeWeight: 3,
        fillColor: "#00FF33",
        fillOpacity: 1
    });
  }, 3);


  map.on('rightclick', function(e) {
    contextMenu.open(map, e.lnglat);
    contextMenuPositon = e.lnglat;
  });
  
  function myrefresh()
  {
    window.location.reload();
  }
  //setTimeout('myrefresh()',30*1000);
